{
	"name": "order_dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_AzureSqlTable_to_ADLS_INPUT",
						"type": "DatasetReference"
					},
					"name": "ordersinputstream"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Json_output",
						"type": "DatasetReference"
					},
					"name": "sinkordersdata"
				}
			],
			"transformations": [
				{
					"name": "selectorders"
				},
				{
					"name": "aggregateordersdata"
				}
			],
			"scriptLines": [
				"source(output(",
				"          course_id as integer,",
				"          course_name as string,",
				"          course_duration_months as integer,",
				"          course_fee as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> ordersinputstream",
				"ordersinputstream select(mapColumn(",
				"          course_id,",
				"          course_name,",
				"          course_duration = course_duration_months",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectorders",
				"selectorders aggregate(groupBy(course_name),",
				"     order_id = count(order_id)\r",
				") ~> aggregateordersdata",
				"aggregateordersdata sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkordersdata"
			]
		}
	}
}